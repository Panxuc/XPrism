<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XPrism.SettingPage"
             Title="眼镜设置">
    <ScrollView>
        <VerticalStackLayout Margin="16">
            <Label Text="时间设置" FontSize="Title" HorizontalOptions="Center" />
            <Label />
            <HorizontalStackLayout HorizontalOptions="Center">
                <DatePicker x:Name="datePicker" FontSize="18" TextColor="#7430da" HorizontalOptions="Center" />
                <Label Text="    "/>
                <TimePicker x:Name="timePicker" FontSize="18" TextColor="#7430da" HorizontalOptions="Center" />
            </HorizontalStackLayout>
            <HorizontalStackLayout HorizontalOptions="Center">
                <Button Text="本机时间" Clicked="OnTimeRefreshClicked" />
                <Label Text="    "/>
                <Button Text="设置时间" Clicked="OnTimeSetClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>