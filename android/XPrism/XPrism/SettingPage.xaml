<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XPrism.SettingPage"
             Title="眼镜设置">
    <ScrollView>
        <VerticalStackLayout Margin="16">
            <Label Text="网络设置" FontSize="Title" HorizontalOptions="Center" />
            <Label />
            <Label Text="Pico IP" FontSize="18" HorizontalTextAlignment="Center" />
            <Entry x:Name="picoIPEntry" Placeholder="Pico IP" FontSize="18" HorizontalTextAlignment="Center" />
            <Button Text="更新" Clicked="OnPicoIPClicked" />
            <Label />
            <Label Text="Cam IP" FontSize="18" HorizontalTextAlignment="Center" />
            <Entry x:Name="camIPEntry" Placeholder="Cam IP" FontSize="18" HorizontalTextAlignment="Center" />
            <Button Text="更新" Clicked="OnCamIPClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>